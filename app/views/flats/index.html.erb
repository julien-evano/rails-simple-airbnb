<h1>All flats</h1>


<div class="d-flex justify-content-around">
<% @flats.each do |flat| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top w-180 h-200" src="https://source.unsplash.com/random" alt="">
      <div class="card-body">
        <h5 class="card-title font-weight-bold"><%= flat.name %></h5>
        <p class="card-text font-weight-italic"><%= flat.description %></p>

        <div class="d-flex justify-content-between">
          <div class="d-flex">
            <i class="material-icons">people</i>
            <p class="card-text"><%= flat.number_of_guests %></p>
          </div>
          <div class="d-flex">
            <i class="material-icons font-size-3">euro_symbol</i>
            <p class="card-text"><%= flat.price_per_night %></p>
          </div>
        </div>

        <%= link_to "More info", flat_path(flat), :class => "btn btn-primary mt-3 font-size" %>
        <%= link_to "Edit", edit_flat_path(flat), :class => "btn btn-warning mt-3" %>
        <%= link_to 'Remove', flat, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger mt-3" %>
      </div>
    </div>
  <% end %>
</div>
