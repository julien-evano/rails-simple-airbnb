
<div class="d-flex">

<div>

  <div class="card bg-light ">
    <h1><%= @flat.name %></h1>
    <h4><%= @flat.address %></h4>
  </div>

  <div class="card">
    <h2>A bit more about this flat...</h2>
    <p><%= @flat.description %></p>
  </div>

</div>

<div>

  <div class="card">
    <h3>Book this place!</h3>
    <a href="#" class="btn btn-success">Book</a>
  </div>

  <div class="card">
    <h2>Details</h2>
    <div class="d-flex">
      <i class="material-icons">people</i>
      <p class="card-text"><%= @flat.number_of_guests %></p>
    </div>
    <div class="d-flex">
      <i class="material-icons font-size-3">euro_symbol</i>
      <p class="card-text"><%= @flat.price_per_night %></p>
    </div>
  </div>

  <div class="card">
    <p>Share</p>
    <i class="material-icons font-size-3">facebook</i>
    <i class="material-icons font-size-3">twitter</i>
    <i class="material-icons font-size-3">pinterest</i>
    <i class="material-icons font-size-3">email</i>
  </div>

</div>

</div>
